<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LabTask2UI.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <Grid RowSpacing="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Dog Image -->
                <RowDefinition Height="Auto"/>
                <!-- Dog Info -->
                <RowDefinition Height="Auto"/>
                <!-- Owner Info -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" BackgroundColor="#4A148C" Padding="20,50,20,20">
                <Label Text="Wong Sing Yaw  |  BCS23090010"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White"/>
            </StackLayout>

            <Image Grid.Row="1"
                   Source="image7.png"
                   Aspect="AspectFill"
                   HeightRequest="220" />

            <Frame Grid.Row="2"
                   Margin="20,-30,20,0"
                   BackgroundColor="#FFF4E0"
                   CornerRadius="25"
                   HasShadow="True"
                   Padding="20">

                <Grid RowSpacing="6" ColumnSpacing="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Urh?"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="Black"/>

                    <Image Grid.Row="0" Grid.Column="1"
                           Source="symbolmale.png"
                           WidthRequest="26" HeightRequest="26"
                           VerticalOptions="Center"/>

                    <StackLayout Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <Label Text="Dog"
                               FontSize="18"
                               TextColor="#4B5563"/>
                        <StackLayout Orientation="Horizontal" Spacing="5">
                            <Image Source="clock.png" WidthRequest="18" HeightRequest="18"/>
                            <Label Text="1 year old" FontSize="16" TextColor="#4B5563"/>
                        </StackLayout>
                    </StackLayout>

                    <StackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="8" Margin="0,5,0,0">
                        <Image Source="location.png" WidthRequest="18" HeightRequest="18" VerticalOptions="Center"/>
                        <Label Text="3B, Lorong 88, Taman Rantau Panjang, 96000 Sibu, Sarawak"
                               FontSize="14"
                               TextColor="#6B7280"
                               VerticalOptions="Center"/>
                    </StackLayout>
                </Grid>
            </Frame>

            <Grid Grid.Row="3" Padding="20,15,20,0" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="image6.jpg"
                       HeightRequest="55"
                       WidthRequest="55"
                       Aspect="AspectFill">
                    <Image.Clip>
                        <EllipseGeometry Center="27.5,27.5" RadiusX="27.5" RadiusY="27.5"/>
                    </Image.Clip>
                </Image>

                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                    <Label Text="Ali bin Abubaka"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    <Label Text="Owner"
                           FontSize="14"
                           TextColor="Gray"/>
                </VerticalStackLayout>

                <Label Grid.Column="2"
                       Text="1.11.2024"
                       FontSize="12"
                       TextColor="Gray"
                       VerticalOptions="Center"/>
            </Grid>

            <VerticalStackLayout Grid.Row="4" Padding="20,10,20,20" Spacing="15">
                <Label Text="Hi! Urh? ah? Your name’s Urh? Bro, that sounds like a loading screen noise"
                       FontSize="14"
                       TextColor="#4B5563"
                       LineHeight="1.3"/>

                <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15" Margin="0,5,0,0">
                    <Button Grid.Column="0"
                            Text="♡"
                            FontSize="22"
                            BackgroundColor="#F3F4F6"
                            TextColor="#EF4444"
                            CornerRadius="25"
                            HeightRequest="55"
                            WidthRequest="55" />

                    <Button Grid.Column="1"
                            Text="Adoption"
                            FontAttributes="Bold"
                            FontSize="16"
                            BackgroundColor="#FDBF60"
                            TextColor="Black"
                            CornerRadius="25"
                            HeightRequest="55" />
                </Grid>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
